<h1>Listing ads</h1>

<table>
  <thead>
    <tr>
      <th>Advert Name</th>
      <th>Short Description</th>
      <th>Price</th>
      <th>Seller Id</th>
      <th>Email</th>
      <th>HAVEALOOK</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.name %></td>
        <td><%= ad.description %></td>
        <td><%= number_to_currency(ad.price, :unit => "â‚¬") %></td>
        <td><%= ad.seller_id %></td>
        <td><%= ad.email %></td>
        <td>
          <div class="image">
                <%= link_to (image_tag ad.ing_url, :style => "height:40px"), ad %>
            </div>
        </td>        
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

